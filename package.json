{
  "name": "clases-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:cloudflare": "npx @cloudflare/next-on-pages",
    "deploy:cloudflare": "npm run build:cloudflare && npx wrangler pages deploy .vercel/output/static --project-name=clases-bot",
    "start": "next start",
    "lint": "next lint",
    "db:migrate": "wrangler d1 migrations apply clases-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply clases-db --remote",
    "dev:cloudflare": "next dev"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "next": "^15.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "wrangler": "^3.19.0"
  }
}
